@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@Url.Content("~/Images/carrousel/c3.png")" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <span class="c-caption-top">Choose your Valentine Gifts</span>
                <br />
                <p>Here!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@Url.Content("~/Images/carrousel/c4.jpeg")" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <span class="c-caption-top">This Valentine's Day</span>
                <br />
                <p>Say Thanks!</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Sections card-->
<section id="cards-section">
    <div class="container">
        <div class="row d-flex flex-wrap justify-content-between">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">WE LOVE OUR CUSTOMERS</h5>
                    <p class="card-text">We are known to provide best possible service ever.</p>

                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">BEST PRICES</h5>
                    <p class="card-text">Just check it!</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">POPULAR ITEMS</h5>
                    <p class="card-text">Discover the best in sellers.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products show-->
<section id="main-products">
    <div class="title-main-produts">
        <h1>Latest produts</h1>
    </div>
    <!-- Products -->
    <div class="container products-content">
        <div ng-app="myApp" ng-controller="productController">
            <strong class="error">{{ error }}</strong>

            <!-- Filter row -->
            <div class="row mb-4">
                <div class="col-auto">
                    <label>Filter by:</label>
                </div>
                <div class="col-auto">
                    <select class="custom-select mr-sm-5" id="categorySelect" ng-model="sortCategory.category">
                        <option value="" selected>All Categories...</option>
                        <option value="Accesories">Accesories</option>
                        <option value="Clothes">Clothes</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Kitche">Kitchen</option>
                        <option value="Toys">Toys</option>
                        <option value="Pillow">Pillows</option>
                    </select>
                </div>
                <div class="col-auto">
                    <input class="form-control" type="search" ng-model="query" placeholder="Search" />
                </div>
            </div><!-- End filter row-->

            <div class="row d-flex flex-wrap justify-content-center">
                <div class="card animate-repeat" ng-repeat="product in Products| filter:query | orderBy: '-ID' | filter :sortCategory">
                    <a href="@Url.Action("Product", "Home")/{{product.ID}}">
                        <img class="card-img-top img-responsive" src="data:image/gif;base64,{{product.image}}" alt="{{ product.name }}">
                        <div class="card-body">
                            <p class="card-text">{{ product.name }}</p>
                            <div class="card-bottom d-flex">

                                <p>${{product.price}}</p>
                            </div>
                        </div>

                    </a>
                </div>
            </div>

        </div>
        </d iv>

</section>


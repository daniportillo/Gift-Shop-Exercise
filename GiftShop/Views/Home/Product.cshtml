
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container product-details">
    <div class="card mt-4" ng-controller="DetailsController">
        <div class="card-body">
            <div class="row" >
                <div class="col-sm-6">
                    <img class="img-fluid" src="data:image/*;base64,{{image}}" alt="{{ name }}">
                </div>
                <div class="col-sm-6">
                    <div class="row mb-4">
                        <h3 class="product-title">{{name}}</h3>
                    </div>
                    
                    <div class="row">
                        <h5>Description:</h5>
                    </div>
                    <div class="row">
                        <p>{{description}}</p>
                    </div>
                    <div class="row">
                        <p class="product-cat"><span class="badge badge-pill badge-info">{{category}}</span></p>
                    </div>
                    <div class="row">
                        <p>${{price}} USD</p>
                    </div>
                    <div class="row d-flex justify-content-center mt-4">
                        <button  class="btn btn-outline-warning">
                            <span>Add to Cart</span>
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>

                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
